          p DATA DI USCITA: #{data}
          p PRODUZIONE: #{pcomp}
          p GENERE: #{genere}
          p VALUTAZIONE MEDIA: #{rank}/10
          p BUDGET: #{budget} $
          p DURATA: #{durata} min.

        //immagine risultato
