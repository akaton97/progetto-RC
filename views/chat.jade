    #chat-app
      #chat.has-text-centered

        section.section.chat-container
          .container
            .columns
              .box.column.is-8.is-offset-2
                h2.title Chatbox
                .chat-messages.has-text-left#ch
                  ul#chat-messages
                form
                  .field.has-addons
                    p.control
                      input(type='text', class='input', value='Utente predefinito', id='name')
                    p.control.is-expanded
                      input(type='text', class='input', placeholder='Digita qualcosa...', id='message')
                    p.control
                      input(type='submit', class='button is-success sfbg', value='Post', style='background-color: black;')
                      
        script.
            const socket = io();
            $('form').submit(function() {
              const name = $('#name').val();
              const message = $('#message').val();

              socket.emit('chatter', `${name} : ${message}`);
              $('#message').val('');
              return false; 
            });

            socket.on('chatter', function(message) {
              $('#chat-messages').append($('<li>').text(message));
            });
        
